{
    "$schema":"https://docs.renovatebot.com/renovate-schema.json",
    "extends":[
       "local>ymickler/renovate-config:base"
    ],
    "description": "This cron expression schedules a task to run daily at 12 AM and 12 PM",
    "schedule": ["0 0,12 * * *"],
    "enabledManagers": ["github-actions"],
    "packageRules":[
       {
          "matchManagers":[
             "github-actions"
          ],
          "matchUpdateTypes":[
             "minor",
             "patch"
          ],
          "labels":[
             "action-minor-patch-update"
          ],
          "groupName": "GitHub actions minor & patch",
          "groupSlug": "gitHub-actions-minor-patch",
          "pinDigests":true,
          "automerge": false
       },
       {
          "matchManagers":[
             "github-actions"
          ],
          "labels":[
             "action-major-update"
          ],
          "matchUpdateTypes":[
             "major"
          ],
          "pinDigests":true,
          "automerge": false
       }
    ]
 }
