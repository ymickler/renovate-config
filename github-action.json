{
    "$schema":"https://docs.renovatebot.com/renovate-schema.json",
    "extends":[
       "local>ymickler/renovate-config:base"
    ],
    "enabledManagers": ["github-actions"],
    "packageRules":[
       {
          "matchManagers":[
             "github-actions"
          ],
          "matchUpdateTypes":[
             "minor",
             "patch"
          ],
          "labels":[
             "action-minor-patch-update"
          ],
          "pinDigests":true,
          "automerge": false
       },
       {
          "matchManagers":[
             "github-actions"
          ],
          "labels":[
             "action-major-update"
          ],
          "matchUpdateTypes":[
             "major"
          ],
          "pinDigests":true,
          "automerge": false
       }
    ]
 }
