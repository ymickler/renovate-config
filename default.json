{
    "$schema":"https://docs.renovatebot.com/renovate-schema.json",
    "extends":[
       "config:recommended",
       "local>ymickler/renovate-config:github-actions",
       "local>ymickler/renovate-config:docker-compose",
       "local>ymickler/renovate-config:npm"
    ],
    "vulnerabilityAlerts":{ 
       "labels":[
          "security"
       ]
    },
    "prConcurrentLimit":30,
    "timezone":"Europe/Berlin",
    "separateMultipleMajor":true,
    "rebaseWhen":"conflicted",
    "packageRules":[
       {
          "matchManagers":[
             "docker-compose"
          ],
          "matchUpdateTypes":[
             "major"
          ],
          "labels":[
             "docker-major-update"
          ],
          "pinDigests":true,
          "branchTopic":"major",
          "automerge": false
       },
       {
          "matchManagers":[
             "docker-compose"
          ],
          "matchUpdateTypes":[
             "minor",
             "patch"
          ],
          "labels":[
             "docker-minor-patch-update"
          ],
          "pinDigests":true,
          "branchTopic":"minor-patch",
          "automerge": false
       },
       {
          "matchManagers":[
             "github-actions"
          ],
          "matchUpdateTypes":[
             "minor",
             "patch"
          ],
          "labels":[
             "action-minor-patch-update"
          ],
          "pinDigests":true,
          "automerge": false
       },
       {
          "matchManagers":[
             "github-actions"
          ],
          "labels":[
             "action-major-update"
          ],
          "matchUpdateTypes":[
             "major"
          ],
          "pinDigests":true,
          "automerge": false
       },
       {
          "matchManagers":[
             "npm"
          ],
          "labels":[
             "node-minor-patch-update"
          ],
          "matchUpdateTypes":[
             "minor",
             "patch"
          ],
          "pinDigests":true,
          "lockFileMaintenance":{
             "enabled":true
          },
          "automerge": false
       },
       {
          "matchManagers":[
             "npm"
          ],
          "labels":[
             "node-major-update"
          ],
          "matchUpdateTypes":[
             "major"
          ],
          "pinDigests": true,
          "lockFileMaintenance":{
             "enabled":true
          },
          "automerge": false
       }
    ]
 }