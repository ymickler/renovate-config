{
    "$schema":"https://docs.renovatebot.com/renovate-schema.json",
    "extends":[
       "local>ymickler/renovate-config:base"
    ],
    "enabledManagers": ["docker-compose"],
    "packageRules":[
       {
          "matchManagers":[
             "docker-compose"
          ],
          "matchUpdateTypes":[
             "major"
          ],
          "labels":[
             "docker-major-update"
          ],
          "branchTopic":"major",
          "automerge": false
       },
       {
          "matchManagers":[
             "docker-compose"
          ],
          "matchUpdateTypes":[
             "minor",
             "patch"
          ],
          "labels":[
             "docker-minor-patch-update"
          ],
          "branchTopic":"minor-patch",
          "automerge": false
       }
    ]
 }
