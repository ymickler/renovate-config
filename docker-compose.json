{
    "$schema":"https://docs.renovatebot.com/renovate-schema.json",
    "extends":[
       "config:recommended"
    ],
    "vulnerabilityAlerts":{ 
       "labels":[
          "security"
       ]
    },
    "prConcurrentLimit":30,
    "timezone":"Europe/Berlin",
    "separateMultipleMajor":true,
    "rebaseWhen":"conflicted",
    "enabledManagers": ["docker-compose"],
    "packageRules":[
       {
          "matchManagers":[
             "docker-compose"
          ],
          "matchUpdateTypes":[
             "major"
          ],
          "labels":[
             "docker-major-update"
          ],
          "pinDigests":true,
          "branchTopic":"major",
          "automerge": false
       },
       {
          "matchManagers":[
             "docker-compose"
          ],
          "matchUpdateTypes":[
             "minor",
             "patch"
          ],
          "labels":[
             "docker-minor-patch-update"
          ],
          "pinDigests":true,
          "branchTopic":"minor-patch",
          "automerge": false
       }
    ]
 }