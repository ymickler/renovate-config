{
    "$schema":"https://docs.renovatebot.com/renovate-schema.json",
   "extends":[
       "local>ymickler/renovate-config:base"
    ],
    "enabledManagers": ["npm"],
    "packageRules":[
       {
          "matchManagers":[
             "npm"
          ],
          "labels":[
             "node-minor-patch-update"
          ],
          "matchUpdateTypes":[
             "minor",
             "patch"
          ],
          "groupName": "Node updates",
          "groupSlug": "node-updates",
          "pinDigests":true,
          "lockFileMaintenance":{
             "enabled":true
          },
          "automerge": false
       },
       {
          "matchManagers":[
             "npm"
          ],
          "labels":[
             "node-major-update"
          ],
          "matchUpdateTypes":[
             "major"
          ],
          "pinDigests": true,
          "lockFileMaintenance":{
             "enabled":true
          },
          "automerge": false
       }
    ]
 }
